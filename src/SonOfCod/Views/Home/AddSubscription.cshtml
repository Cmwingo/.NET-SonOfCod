@{
    ViewData["Title"] = "Subscribe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SonOfCod.Models.Subscription

<h2>Subscribe to our mailing list</h2>
<hr />

@using (Html.BeginForm("AddSubscription", "Home", FormMethod.Post))
{
    @Html.LabelFor(model => model.Email)
    @Html.EditorFor(model => model.Email)

    @Html.LabelFor(model => model.Age)
    @Html.EditorFor(model => model.Age)

    @Html.LabelFor(model => model.Favorite, "What is your favorite Son of Cod product?")
    @Html.EditorFor(model => model.Favorite)

    <input type="submit" value="Create" class="btn btn-default" />
}

@Html.ActionLink("Back to List", "Index")